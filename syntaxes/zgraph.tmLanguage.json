{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ZGraph",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#ctrl-statements"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.double-slash.zgraph",
			"begin": "//",
			"end": "$"
		},
		"numbers": {
			"name": "constant.numeric.zgraph",
			"match": "\\b\\d+\\b"
		},
		"operators": {
			"name": "keyword.operator.zgraph",
			"match": "\\b(\\+|\\-|\\*|\\/|\\=|\\<|\\>|\\&|\\|)\\b"
		},
		"punctuation": {
			"name": "punctuation.definition.zgraph",
			"match": "\\(|\\)|\\{|\\}|\\[|\\]|\\,|\\.|\\;"
		},
		"variables": {
			"name": "variable.other.zgraph",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
		},
		"ctrl-statements": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(start|export|title|import|printVar)\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.other.zgraph",
				"match": "\\b(point|seg|segment|line|graph|to|from|at|method|print|call|number|tri|triangle|quad|quadrilateral|poly|polygon)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.zgraph",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.zgraph",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.zg"
}